" Make external commands work through a pipe instead of a pseudo-tty
"set noguipty

" set ch=2		" Make command line two lines high

set mousehide		" Hide the mouse when typing text

" Only do this for Vim version 5.0 and later.
if version >= 500

  " Switch on syntax highlighting if it wasn't on yet.
  if !exists("syntax_on")
    syntax on
  endif
endif

set guifont=JetBrains_Mono:h11
 " set guifontwide=Inconsolata:h9
 " set guioptions-=T "removes toolbar
 " set guioptions-=m "removes menu bar
 " set guioptions-=r "removes right scrollbar
 " set guioptions-=L "removes left scrollbar
 " set guioptions-=e "removes gui tab
set guioptions=gc!
set renderoptions=type:directx,level:0.75,gamma:1.25,contrast:0.25,geom:1,renmode:4,taamode:1

